<h1>Editing recipe</h1>

<%= render 'form' %>

<%= form_for(@recipe.ingredients.build, :url => recipe_ingredients_path(@recipe)) do |f| %>
  <%= f.label :name, 'Ingredient name' %>
  <%= f.text_field :name %>

  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.submit 'Add Ingredient' %>
<% end %>


<%= render :partial => 'ingredients/ingredients', :object => @recipe.ingredients.select(&:persisted?) %>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>
